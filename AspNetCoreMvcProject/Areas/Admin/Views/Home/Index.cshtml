@model List<Product>

<a asp-action="AddProduct" asp-controller="Home" asp-area="Admin" class="btn btn-primary btn-sm my-2">Add</a>

<table class="table table-sm table-bordered table-hover mt-2">
    <tr>
        <th>Id</th>
        <th>Categories</th>
        <th>Name</th>
        <th>Price</th>
    </tr>

    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ProductId</td>
            <td><getCategoryName product-id="@product.ProductId"></getCategoryName></td>
            <td>@product.ProductName</td>
            <td>@product.UnitPrice</td>
            <td>
                <a asp-action="UpdateProduct" asp-controller="Home" asp-area="Admin" asp-route-id="@product.ProductId" class="btn btn-warning btn-sm">Update</a>
                <a asp-action="DeleteProduct" asp-controller="Home" asp-area="Admin" asp-route-id="@product.ProductId" class="btn btn-danger btn-sm">Delete</a>
                <a asp-action="AssignCategory" asp-controller="Home" asp-area="Admin" asp-route-productId="@product.ProductId" class="btn btn-dark btn-sm">Assign Category</a>
            </td>
        </tr>
    }
</table>
