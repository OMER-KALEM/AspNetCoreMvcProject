@model UpdateProductModel

<form asp-action="UpdateProduct" asp-controller="Home" asp-area="Admin" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductId"/>
    <div class="form-group">
        <label>Product Name :</label>
        <span asp-validation-for="ProductName" class="text-danger"></span>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Unit Price :</label>
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
        <input asp-for="UnitPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label>Image :</label>
        <input type="file" asp-for="Image" class="form-control-file" />
    </div>
    <div class="form-group">
        <a asp-action="Index" asp-controller="Home" asp-area="Admin" class="btn btn-warning">Back</a>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section JavaScript{
    <script src="~/jqueryValid/jquery.validate.min.js"></script>
    <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}