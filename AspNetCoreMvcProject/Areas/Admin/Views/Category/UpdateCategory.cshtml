@model UpdateCategoryModel

<form asp-action="UpdateCategory" asp-controller="Category" asp-area="Admin" method="post" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="CategoryId" />
    <div class="form-group">
        <label>Category Name :</label>
        <span asp-validation-for="CategoryName" class="text-danger"></span>
        <input asp-for="CategoryName" class="form-control" />
    </div>
    <div class="form-group">
        <a asp-action="Index" asp-controller="Category" asp-area="Admin" class="btn btn-warning">Back</a>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section JavaScript{
    <script src="~/jqueryValid/jquery.validate.min.js"></script>
    <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}