@model List<Product>

<div class="row">
    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card mr-1 mb-1">
                    <img src="/img/@item.Image" class="card-img-top" style="height:300px; width:100% " alt="Resim yok">
                    <div class="card-body">
                        <h5 class="card-title">@item.ProductName</h5>
                        <p class="card-text">@item.UnitPrice</p>
                        <a asp-action="ProductDetail" asp-controller="Home" asp-route-id="@item.ProductId" class="btn btn-primary float-right">Detay</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center">
            Ürün yok
        </div>
    }

</div>